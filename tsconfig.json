{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",

    // libs recomendadas
    "lib": ["ESNext"],
    "types": ["vitest","node"],

    // geração de tipos
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // módulo
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,

    // segurança total
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "skipLibCheck": true
  },
  "include": ["src"]
}